<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner_white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corner_light_purple"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/round_corner_white"
                android:orientation="vertical"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/profile_pic_imgv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="20dp"
                    android:layout_weight=".8"
                    android:background="@drawable/dotted_border_imageview" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:weightSum="13" >

                    <!-- 1.4.4.2.1 -->

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3" />
                    <!-- 1.4.4.2.2 -->

                    <ImageButton
                        android:id="@+id/camera_image_bt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_photo_selector" />
                    <!-- 1.4.4.2.3 -->

                    <View
                        android:layout_width="20dp"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7" />
                    <!-- 1.4.4.2.4 -->

                    <ImageButton
                        android:id="@+id/gallery_image_bt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_picture_selector" />
                    <!-- 1.4.4.2.5 -->

                    <View
                        android:layout_width="20dp"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7" />
                    <!-- 1.4.4.2.6 -->

                    <ImageButton
                        android:id="@+id/sdcard_image_bt"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_folder_selector" />
                    <!-- 1.4.4.2.7 -->

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum=".4" >

                <EditText
                    android:id="@+id/user_name_edtxt"
                    android:layout_width="300dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".1"
                    android:background="@drawable/dotted_border"
                    android:gravity="center_vertical"
                    android:hint="Name"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:singleLine="true" >
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1" >
                </View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1" >
                </View>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >
                
                

                <ImageView
                    android:id="@+id/user_password"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                     android:scaleType="fitCenter"
                     android:background="@android:color/transparent"
                    android:src="@drawable/ic_password_selector" />

                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/PasswordName"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#7B2182" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivFragmentChange"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_day_view_selector" />

                <TextView
                    android:id="@+id/tvDayView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/ViewName"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/purplee" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_view" />

                <TextView
                    android:id="@+id/tvView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/ViewName"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#7B2182" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDisplayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startupTime"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnOk"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_tick" />

    <ImageView
        android:id="@+id/btnNo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_close_window_selector" />

</RelativeLayout>