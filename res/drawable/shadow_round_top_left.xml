<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
            <item><rotate android:fromDegrees="-2" android:pivotX="0%" android:pivotY="0%" android:toDegrees="0">
                    <shape>
                        <solid android:color="#D6D6D6" />

                        <corners android:radius="0dp" />
                    </shape>
                </rotate></item>
            <item android:bottom="1dp" android:left="1dp" android:right="4dp" android:top="4dp"><shape>
                    <gradient android:angle="270" android:endColor="#EFEFEF" android:startColor="#FFF" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

                    <corners android:topLeftRadius="10dp" />
                </shape></item>
        </layer-list></item>

</selector>