<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="500dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="5.5" >

    <!-- 1 -->

    <LinearLayout
        android:id="@+id/password_default_dialogue_tutorial_ln"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/round_top_shape"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- 1.1 -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="@string/None"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <!-- 1.2 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ABABAA" />

    <LinearLayout
        android:id="@+id/password1_dialogue_tutorial_ln"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/middle_shape"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- 1.1 -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="@string/Pass1"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <!-- 1.2 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 1.2.1 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_magenta" />
            <!-- 1.2.2 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_magenta" />
            <!-- 1.2.3 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_magenta" />
            <!-- 1.2.4 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_yellow" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ABABAA" />
    <!-- 2 -->

    <LinearLayout
        android:id="@+id/password2_dialogue_tutorial_ln"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/middle_shape"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- 2.1 -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="@string/Pass2"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <!-- 2.2 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 2.2.1 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_blue" />
            <!-- 2.2.2 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_green" />
            <!-- 2.2.3 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_magenta" />
            <!-- 2.2.4 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_green" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#ABABAA" />
    <!-- 3 -->

    <LinearLayout
        android:id="@+id/password3_dialogue_tutorial_ln"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/round_bottom_shape"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- 3.1 -->

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="@string/Pass3"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <!-- 3.2 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- 3.2.1 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_yellow" />
            <!-- 3.2.2 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_blue" />
            <!-- 3.2.3 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_green" />
            <!-- 3.2.4 -->

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_shape_magenta" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>